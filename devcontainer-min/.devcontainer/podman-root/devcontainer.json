// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3 as root user",
	"image": "mcr.microsoft.com/devcontainers/python:2-3.12-bullseye",
    // this should work with any image as it uses the root user
    "remoteUser": "root", // use root user inside container
    // since podman rootless maps root user to host user, no need to remap UIDs
    "updateRemoteUserUID": false
}
